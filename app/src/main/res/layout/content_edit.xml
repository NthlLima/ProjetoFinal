                android:textSize="32sp"
                    android:layout_alignBottom="@+id/textCAR"
                android:layout_alignStart="@+id/numSAB"
                    android:layout_row="6"
                    android:layout_column="3"
                    android:textAlignment="center"
                    android:text="00"
