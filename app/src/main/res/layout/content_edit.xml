                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:srcCompat="@drawable/sabpocao"
                    android:id="@+id/pcaoOrange"
                    android:layout_row="5"
                    android:layout_column="0" />

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:srcCompat="@drawable/sab"
                    android:id="@+id/imgSAB" />

                <ImageView
                    android:layout_width="50sp"
